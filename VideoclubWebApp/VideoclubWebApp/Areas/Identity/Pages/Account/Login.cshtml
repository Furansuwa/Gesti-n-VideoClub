@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<script>
    document.body.classList.add('login-body-style');
</script>

<div class="netflix-card">
    <h2>Iniciar Sesión</h2>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <input asp-for="Input.Email" class="netflix-input" autocomplete="username" aria-required="true" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Input.Password" class="netflix-input" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label text-white-50">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="btn-netflix">Iniciar Sesión</button>

        <div class="netflix-links">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
            </p>
            <p>
                ¿Nuevo aquí? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate aquí</a>.
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}