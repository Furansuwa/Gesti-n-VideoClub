@model VideoclubWebApp.Models.Articulos.Articulo

@{
    ViewData["Title"] = "Eliminar Artículo";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="vc-card-panel shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="fa-solid fa-triangle-exclamation fa-3x mb-3"></i>
                    <h3 class="mb-0">¿Eliminar Artículo?</h3>
                </div>

                <div class="card-body p-4 text-center">
                    <p class="lead vc-text-secondary">Estás a punto de eliminar permanentemente:</p>
                    <h2 class="fw-bold mb-4">@Model.Titulo</h2>

                    <div class="alert alert-warning text-start">
                        <small><i class="fa-solid fa-info-circle"></i> Esta acción borrará el artículo del catálogo y desvinculará a los actores asociados. No se puede deshacer.</small>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 d-grid gap-2">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa-solid fa-trash-can me-2"></i> Sí, Eliminar Definitivamente
                        </button>

                        <a asp-action="Index" class="btn btn-light btn-lg text-muted">
                            Cancelar y Volver
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>