@model VideoclubWebApp.Models.Articulos.Articulo

@{
    ViewData["Title"] = "Ficha Técnica";
    var tipoArticulo = ViewBag.TipoArticulo as VideoClubWebApp.Models.TipoArticulo;
    var genero = ViewBag.Genero as VideoClubWebApp.Models.Genero;
    var idioma = ViewBag.Idioma as VideoClubWebApp.Models.Idioma;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="vc-card-panel shadow border-0 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fw-light">Ficha Técnica</h4>
                    @if (Model.Estado == "Disponible")
                    {
                        <span class="badge bg-success">Disponible</span>
                    }
                    else if (Model.Estado == "Rentado")
                    {
                        <span class="badge bg-warning text-dark">Rentado</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Estado</span>
                    }
                </div>

                <div class="card-body p-4">
                    <h2 class="display-6 fw-bold mb-4 text-primary">@Model.Titulo</h2>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="vc-text-secondary mb-1">Género</p>
                            <h5 class="mb-3">@genero?.Descripcion</h5>

                            <p class="vc-text-secondary mb-1">Tipo</p>
                            <h5 class="mb-3">@tipoArticulo?.Descripcion</h5>

                            <p class="vc-text-secondary mb-1">Idioma</p>
                            <h5>@idioma?.Descripcion</h5>
                        </div>
                        <div class="col-md-6 border-start ps-md-4">
                            <div class="p-3 vc-bg-alt rounded mb-3">
                                <small class="text-uppercase vc-text-secondary fw-bold">Costos</small>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span>Renta diaria:</span>
                                    <span class="fw-bold fs-5">$@Model.RentaPorDia.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-1">
                                    <span>Mora por retraso:</span>
                                    <span class="text-danger fw-bold">$@Model.MontoEntregaTardia.ToString("N2")</span>
                                </div>
                            </div>
                            <p class="mb-0"><i class="fa-regular fa-calendar me-1"></i> Días permitidos: <strong>@Model.DiasRenta días</strong></p>
                        </div>
                    </div>

                    @if (Model.ElencoArticulos != null && Model.ElencoArticulos.Any())
                    {
                        <hr class="my-4" />
                        <h5 class="vc-text-secondary mb-3">Elenco / Reparto</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless">
                                <tbody>
                                    @foreach (var ea in Model.ElencoArticulos)
                                    {
                                        <tr>
                                            <td class="fw-bold" style="width: 40%">@ea.Elenco.Nombre</td>
                                            <td class="vc-text-secondary fst-italic">como @ea.Rol</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-transparent p-3 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                        <i class="fa-solid fa-pen"></i> Editar Ficha
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>