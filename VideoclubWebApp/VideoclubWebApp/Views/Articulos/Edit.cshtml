@using VideoclubWebApp.Models.Articulos
@model ArticuloElencoViewModel

@{
    ViewData["Title"] = "Editar Artículo";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Editar: @Model.Articulo.Titulo</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left"></i> Cancelar
        </a>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Articulo.Id" />

        <div class="vc-card-panel mb-4">
            <div class="card-header bg-transparent border-bottom py-3">
                <h5 class="card-title mb-0 text-primary">Datos del Artículo</h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="Articulo.Titulo" class="form-label fw-bold"></label>
                        <input asp-for="Articulo.Titulo" class="form-control" />
                        <span asp-validation-for="Articulo.Titulo" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Articulo.TipoArticuloId" class="form-label">Tipo</label>
                        <select asp-for="Articulo.TipoArticuloId" class="form-select" asp-items="ViewBag.TipoArticuloId">
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Articulo.GeneroId" class="form-label">Género</label>
                        <select asp-for="Articulo.GeneroId" class="form-select" asp-items="ViewBag.GeneroId">
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Articulo.IdiomaId" class="form-label">Idioma</label>
                        <select asp-for="Articulo.IdiomaId" class="form-select" asp-items="ViewBag.IdiomaId">
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Articulo.RentaPorDia" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Articulo.RentaPorDia" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Articulo.DiasRenta" class="form-label"></label>
                        <input asp-for="Articulo.DiasRenta" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Articulo.MontoEntregaTardia" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Articulo.MontoEntregaTardia" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Articulo.Estado" class="form-label"></label>
                        <select asp-for="Articulo.Estado" class="form-select">
                            <option value="Disponible">Disponible</option>
                            <option value="Rentado">Rentado</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="vc-card-panel mb-4">
            <div class="card-header bg-transparent border-bottom py-3">
                <h5 class="card-title mb-0 text-dark">Gestión de Elenco</h5>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    @for (var i = 0; i < Model.ElencosDisponibles.Count; i++)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded @(Model.ElencosDisponibles[i].Asignado ? "vc-bg-alt border-primary" : "")">
                                <div class="form-check mb-2">
                                    <input asp-for="ElencosDisponibles[i].Asignado" type="checkbox" class="form-check-input" />
                                    <label asp-for="ElencosDisponibles[i].Asignado" class="form-check-label fw-bold">
                                        @Model.ElencosDisponibles[i].Nombre
                                    </label>
                                    <input asp-for="ElencosDisponibles[i].ElencoId" type="hidden" />
                                    <input asp-for="ElencosDisponibles[i].Nombre" type="hidden" />
                                </div>
                                <div class="ps-4">
                                    <input asp-for="ElencosDisponibles[i].Rol" class="form-control form-control-sm" placeholder="Rol" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mb-5">
            <button type="submit" class="btn-vc-create border-0 w-100 justify-content-center py-3" style="font-size: 1.1rem;">
                <i class="fa-solid fa-check me-2"></i> Actualizar Artículo
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}