@model IEnumerable<VideoClubWebApp.Models.Cliente>

@{
    ViewData["Title"] = "Cartera de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Cartera de Clientes</h1>
    <a asp-action="Create" class="btn-vc-create">
        <i class="fa-solid fa-user-plus"></i> Nuevo Cliente
    </a>
</div>

<div class="vc-card-panel p-0 overflow-hidden">
    <table class="table table-hover mb-0 align-middle">
        <thead class="vc-table-head">
            <tr>
                <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.NoTarjetaCR)</th>
                <th>@Html.DisplayNameFor(model => model.LimiteCredito)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold">
                        <i class="fa-regular fa-user me-2 vc-text-secondary"></i>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="font-monospace">
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td class="vc-text-secondary">
                        <i class="fa-regular fa-credit-card me-1"></i>
                        **** @item.NoTarjetaCR.Substring(Math.Max(0, item.NoTarjetaCR.Length - 4))
                    </td>
                    <td class="text-success fw-bold">
                        $@item.LimiteCredito.ToString("N2")
                    </td>
                    <td>
                        @if (item.Estado == "Activo")
                        {
                            <span class="badge bg-success rounded-pill">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger rounded-pill">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="vc-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-vc-icon edit" title="Editar">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-vc-icon details" title="Detalles">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-vc-icon delete" title="Eliminar">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>