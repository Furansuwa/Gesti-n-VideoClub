@using VideoclubWebApp.Models.Elenco
@model Elenco

@{
    ViewData["Title"] = "Eliminar Artista";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="fa-solid fa-user-xmark fa-3x mb-3"></i>
                    <h3 class="mb-0">¿Eliminar Artista?</h3>
                </div>

                <div class="card-body p-4 text-center">
                    <p class="lead text-muted">Estás a punto de eliminar del sistema a:</p>
                    <h2 class="fw-bold mb-4">@Model.Nombre</h2>

                    <div class="alert alert-warning text-start">
                        <small><i class="fa-solid fa-triangle-exclamation"></i> <strong>Advertencia:</strong> Esta acción podría afectar el historial de las películas en las que participa este artista.</small>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 d-grid gap-2">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa-solid fa-trash-can"></i> Confirmar Eliminación
                        </button>

                        <a asp-action="Index" class="btn btn-light btn-lg text-muted">
                            Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>