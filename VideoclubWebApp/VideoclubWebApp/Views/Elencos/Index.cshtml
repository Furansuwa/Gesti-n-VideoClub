@using VideoclubWebApp.Models.Elenco
@model IEnumerable<Elenco>

@{
    ViewData["Title"] = "Gestión de Elenco";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Directorio de Elenco</h1>
    <a asp-action="Create" class="btn-vc-create">
        <i class="fa-solid fa-masks-theater"></i> Nuevo Artista
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">
                            <i class="fa-regular fa-user-circle me-2 text-muted"></i>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @if (item.Estado == "Activo")
                            {
                                <span class="badge bg-success rounded-pill">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="vc-actions">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-vc-icon edit" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-vc-icon details" title="Detalles">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-vc-icon delete" title="Eliminar">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>