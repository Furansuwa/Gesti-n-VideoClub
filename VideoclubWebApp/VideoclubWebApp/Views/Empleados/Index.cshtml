@model IEnumerable<VideoClubWebApp.Models.Empleado>

@{
    ViewData["Title"] = "Gestión de Personal";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Personal y Nómina</h1>
    <a asp-action="Create" class="btn-vc-create">
        <i class="fa-solid fa-user-tie"></i> Contratar Empleado
    </a>
</div>

<div class="vc-card-panel p-0 overflow-hidden">
    <table class="table table-hover mb-0 align-middle">
        <thead class="vc-table-head">
            <tr>
                <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.TandaLabor)</th>
                <th>@Html.DisplayNameFor(model => model.PorcientoComision)</th>
                <th>@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold">
                        <div class="d-flex align-items-center">
                            <div class="vc-bg-alt rounded-circle d-flex align-items-center justify-content-center me-3" style="width:40px; height:40px;">
                                <i class="fa-solid fa-user text-primary"></i>
                            </div>
                            <div>
                                @Html.DisplayFor(modelItem => item.Nombre)
                                <div class="small vc-text-secondary">Ced: @item.Cedula</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        @if (item.TandaLabor == "Nocturna")
                        {
                            <span class="badge bg-dark"><i class="fa-solid fa-moon me-1"></i> Nocturna</span>
                        }
                        else
                        {
                            <span class="badge bg-info text-dark"><i class="fa-solid fa-sun me-1"></i> @item.TandaLabor</span>
                        }
                    </td>
                    <td class="font-monospace fw-bold text-success">
                        @Html.DisplayFor(modelItem => item.PorcientoComision)%
                    </td>
                    <td>
                        @item.FechaIngreso.ToString("dd/MMM/yyyy")
                    </td>
                    <td>
                        @if (item.Estado == "Activo")
                        {
                            <span class="badge bg-success rounded-pill">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary rounded-pill">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="vc-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-vc-icon edit" title="Editar">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-vc-icon details" title="Detalles">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-vc-icon delete" title="Despedir">
                                <i class="fa-solid fa-user-slash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>