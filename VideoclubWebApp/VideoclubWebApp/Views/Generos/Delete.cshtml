@model VideoClubWebApp.Models.Genero

@{
    ViewData["Title"] = "Eliminar Género";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="vc-card-panel shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="fa-solid fa-trash-can fa-3x mb-3"></i>
                    <h3 class="mb-0">¿Eliminar Categoría?</h3>
                </div>

                <div class="card-body p-4 text-center">
                    <p class="lead vc-text-secondary">Estás a punto de borrar el género:</p>
                    <h2 class="fw-bold mb-4">@Model.Descripcion</h2>

                    <div class="alert alert-warning text-start">
                        <small><i class="fa-solid fa-triangle-exclamation"></i> <strong>Advertencia:</strong> Si hay películas asociadas a este género, es posible que no puedas eliminarlo o que queden sin categoría.</small>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 d-grid gap-2">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa-solid fa-xmark me-2"></i> Confirmar Eliminación
                        </button>

                        <a asp-action="Index" class="btn btn-light btn-lg text-muted">
                            Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>