@model VideoClubWebApp.Models.Genero

@{
    ViewData["Title"] = "Detalles del Género";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="vc-card-panel shadow text-center position-relative">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fa-solid fa-clapperboard fa-4x text-primary opacity-50"></i>
                    </div>

                    <h2 class="fw-bold display-6 mb-2">@Model.Descripcion</h2>
                    <p class="vc-text-secondary mb-4">Categoría de Película</p>

                    @if (Model.Estado == "Activo")
                    {
                        <span class="badge bg-success px-3 py-2 rounded-pill">Disponible</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary px-3 py-2 rounded-pill">No Disponible</span>
                    }

                    <div class="mt-5 d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary w-50">Volver</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-50">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>