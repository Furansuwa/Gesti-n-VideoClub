@model IEnumerable<VideoClubWebApp.Models.Idioma>

@{
    ViewData["Title"] = "Idiomas Disponibles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Catálogo de Idiomas</h1>
    <a asp-action="Create" class="btn-vc-create">
        <i class="fa-solid fa-language"></i> Nuevo Idioma
    </a>
</div>

<div class="vc-card-panel p-0 overflow-hidden">
    <table class="table table-hover mb-0 align-middle">
        <thead class="vc-table-head">
            <tr>
                <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold">
                        <i class="fa-solid fa-comment-dots me-2 vc-text-secondary"></i>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @if (item.Estado == "Activo")
                        {
                            <span class="badge bg-success rounded-pill">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary rounded-pill">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="vc-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-vc-icon edit" title="Editar">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-vc-icon details" title="Detalles">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-vc-icon delete" title="Eliminar">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>