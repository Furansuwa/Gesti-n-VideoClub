@model VideoClubWebApp.Models.Rentas

@{
    ViewData["Title"] = "Nueva Renta";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Registrar Alquiler</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-lg-8">
                <div class="vc-card-panel mb-4">
                    <div class="card-header bg-transparent border-bottom py-3">
                        <h5 class="mb-0 text-primary"><i class="bi bi-cart-check me-2"></i>Datos de la Transacción</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ClienteId" class="form-label fw-bold">Cliente</label>
                                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId">
                                    <option value="">-- Seleccionar Cliente --</option>
                                </select>
                                <span asp-validation-for="ClienteId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ArticuloId" class="form-label fw-bold">Película / Artículo</label>
                                <select asp-for="ArticuloId" class="form-select" asp-items="ViewBag.ArticuloId">
                                    <option value="">-- Seleccionar Artículo --</option>
                                </select>
                                <span asp-validation-for="ArticuloId" class="text-danger"></span>
                                <small class="vc-text-secondary"><i class="bi bi-info-circle"></i> Solo se muestran artículos disponibles.</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EmpleadoId" class="form-label">Atendido por</label>
                                <select asp-for="EmpleadoId" class="form-select" asp-items="ViewBag.EmpleadoId">
                                    <option value="">-- Seleccionar Empleado --</option>
                                </select>
                                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CantidadDias" class="form-label">Días de Renta</label>
                                <div class="input-group">
                                    <input asp-for="CantidadDias" class="form-control" type="number" min="1" placeholder="Automático" />
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                </div>
                                <small class="vc-text-secondary">Dejar vacío para usar los días por defecto.</small>
                                <span asp-validation-for="CantidadDias" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Comentario" class="form-label">Observaciones (Opcional)</label>
                                <textarea asp-for="Comentario" class="form-control" rows="2" placeholder="Estado del disco, notas especiales..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="vc-card-panel bg-info bg-opacity-10 border-info">
                    <div class="card-body p-4">
                        <h5 class="card-title text-info fw-bold mb-3"><i class="bi bi-lightning-charge"></i> Resumen</h5>
                        <ul class="list-unstyled mb-4">
                            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Fecha de inicio: <strong>Hoy</strong></li>
                            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Estado inicial: <strong>Activa</strong></li>
                            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Cálculo automático de tarifa</li>
                        </ul>
                        <hr class="border-info opacity-25">
                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm">
                            <i class="bi bi-check-lg me-2"></i> Confirmar Renta
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}