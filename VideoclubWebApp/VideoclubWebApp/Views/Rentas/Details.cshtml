@model VideoClubWebApp.Models.Rentas

@{
    ViewData["Title"] = "Recibo de Renta";
    var cliente = ViewBag.Cliente as VideoClubWebApp.Models.Cliente;
    var articulo = ViewBag.Articulo as VideoclubWebApp.Models.Articulos.Articulo;
    var empleado = ViewBag.Empleado as VideoClubWebApp.Models.Empleado;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="vc-card-panel shadow border-0 position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 w-100" style="height: 5px; background: @(Model.Estado == "Activa" ? "#0d6efd" : "#198754");"></div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold mb-1">Comprobante de Renta</h3>
                        <p class="font-monospace text-muted">#@Model.NoRenta</p>
                        @if (Model.Estado == "Activa")
                        {
                            <span class="badge bg-primary px-3 py-2 rounded-pill">EN CURSO</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary px-3 py-2 rounded-pill">FINALIZADA</span>
                        }
                    </div>

                    <div class="row mb-4">
                        <div class="col-6">
                            <small class="text-muted d-block">Cliente</small>
                            <strong>@cliente?.Nombre</strong>
                        </div>
                        <div class="col-6 text-end">
                            <small class="text-muted d-block">Fecha</small>
                            <strong>@Model.FechaRenta.ToString("dd/MM/yyyy")</strong>
                        </div>
                    </div>

                    <div class="vc-bg-alt p-3 rounded mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Película</span>
                            <span class="fw-bold">@articulo?.Titulo</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tarifa diaria</span>
                            <span>$@Model.MontoPorDia.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between border-top pt-2 mt-2">
                            <span class="fw-bold">Total Base (@Model.CantidadDias días)</span>
                            <span class="fw-bold text-success">$@((Model.MontoPorDia * Model.CantidadDias).ToString("N2"))</span>
                        </div>
                    </div>

                    <div class="text-center">
                        <p class="small text-muted mb-4">Atendido por: @empleado?.Nombre</p>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Volver al Historial</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>