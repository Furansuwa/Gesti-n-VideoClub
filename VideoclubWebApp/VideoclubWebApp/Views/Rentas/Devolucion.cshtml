@model IEnumerable<VideoClubWebApp.Models.Rentas>

@{
    ViewData["Title"] = "Devoluciones";
}

<h1>Devoluciones</h1>
<h4>Procesar devolución de artículos rentados</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>No. Renta</th>
                            <th>Cliente ID</th>
                            <th>Artículo ID</th>
                            <th>Fecha Renta</th>
                            <th>Días Contratados</th>
                            <th>Monto/Día</th>
                            <th>Fecha Esperada</th>
                            <th>Días Transcurridos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var fechaEsperada = item.FechaRenta.AddDays(item.CantidadDias);
                            var diasTranscurridos = (DateTime.Now - item.FechaRenta).Days;
                            var tieneRetraso = DateTime.Now > fechaEsperada;

                            <tr class="@(tieneRetraso ? "table-warning" : "")">
                                <td>
                                    <strong>#@Html.DisplayFor(modelItem => item.NoRenta)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ClienteId)</td>
                                <td>@Html.DisplayFor(modelItem => item.ArticuloId)</td>
                                <td>@item.FechaRenta.ToString("dd/MM/yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.CantidadDias)</td>
                                <td>$@Html.DisplayFor(modelItem => item.MontoPorDia)</td>
                                <td>
                                    @fechaEsperada.ToString("dd/MM/yyyy")
                                    @if (tieneRetraso)
                                    {
                                        <br />
                                        <span class="badge bg-danger">Retrasada</span>
                                    }
                                </td>
                                <td>
                                    @diasTranscurridos día(s)
                                    @if (tieneRetraso)
                                    {
                                        var diasRetraso = diasTranscurridos - item.CantidadDias;
                                        <br />
                                        <small class="text-danger">
                                            <i class="bi bi-exclamation-triangle"></i> +@diasRetraso día(s) de retraso
                                        </small>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ProcesarDevolucion" asp-route-id="@item.NoRenta" class="btn btn-sm btn-primary">
                                        <i class="bi bi-arrow-return-left"></i> Procesar Devolución
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-info mt-3" role="alert">
                <i class="bi bi-info-circle"></i>
                <strong>Total de rentas activas:</strong> @Model.Count()
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-check-circle"></i> No hay rentas pendientes
                </h5>
                <p>Actualmente no hay artículos rentados pendientes de devolución.</p>
                <hr>
                <p class="mb-0">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nueva Renta
                    </a>
                </p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Ver Todas las Rentas
    </a>
</div>