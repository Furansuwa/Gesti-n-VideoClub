@model IEnumerable<VideoClubWebApp.Models.Rentas>

@{
    ViewData["Title"] = "Gestión de Devoluciones";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Rentas Pendientes</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-list"></i> Ver Historial Completo
    </a>
</div>

@if (!Model.Any())
{
    <div class="vc-card-panel text-center p-5">
        <div class="mb-3 text-success opacity-50">
            <i class="bi bi-check-circle-fill display-1"></i>
        </div>
        <h3>¡Todo al día!</h3>
        <p class="vc-text-secondary">No hay artículos pendientes de devolución en este momento.</p>
        <a asp-action="Create" class="btn btn-primary mt-3">Crear Nueva Renta</a>
    </div>
}
else
{
    <div class="vc-card-panel p-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="vc-table-head">
                    <tr>
                        <th class="ps-4">Renta</th>
                        <th>Cliente</th>
                        <th>Artículo</th>
                        <th>Fecha Límite</th>
                        <th>Estado</th>
                        <th class="text-center">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var fechaEsperada = item.FechaRenta.AddDays(item.CantidadDias);
                        var tieneRetraso = DateTime.Now > fechaEsperada;
                        var diasRetraso = (DateTime.Now - fechaEsperada).Days;

                        <tr class="@(tieneRetraso ? "bg-danger bg-opacity-10" : "")">
                            <td class="ps-4 fw-bold">#@item.NoRenta</td>
                            <td>@item.ClienteId</td>
                            <td>@item.ArticuloId</td>
                            <td>
                                @fechaEsperada.ToString("dd/MM/yyyy")
                                @if (tieneRetraso)
                                {
                                    <div class="text-danger small fw-bold">
                                        <i class="bi bi-exclamation-triangle"></i> @diasRetraso días tarde
                                    </div>
                                }
                            </td>
                            <td>
                                @if (tieneRetraso)
                                {
                                    <span class="badge bg-danger">Vencida</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">A tiempo</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="ProcesarDevolucion" asp-route-id="@item.NoRenta" class="btn btn-primary btn-sm rounded-pill px-3">
                                    <i class="bi bi-box-arrow-in-left me-1"></i> Recibir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}