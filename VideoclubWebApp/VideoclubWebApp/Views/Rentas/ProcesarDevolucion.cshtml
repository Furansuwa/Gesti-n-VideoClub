@model VideoClubWebApp.Models.Rentas

@{
    ViewData["Title"] = "Cierre de Renta";
    var cliente = ViewBag.Cliente as VideoClubWebApp.Models.Cliente;
    var articulo = ViewBag.Articulo as VideoclubWebApp.Models.Articulos.Articulo;
    var fechaEsperada = (DateTime)ViewBag.FechaEsperada;
    var diasRetraso = (int)ViewBag.DiasRetraso;
    var montoBase = (decimal)ViewBag.MontoBase;
    var montoRetraso = (decimal)ViewBag.MontoRetraso;
    var montoTotal = (decimal)ViewBag.MontoTotal;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="vc-card-panel mb-4">
                <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Cierre de Renta #@Model.NoRenta</h5>
                    <span class="badge bg-light text-dark">@Model.FechaRenta.ToString("dd/MM/yyyy")</span>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <small class="vc-text-secondary d-block text-uppercase fw-bold">Cliente</small>
                            <h5 class="mb-3">@cliente?.Nombre</h5>

                            <small class="vc-text-secondary d-block text-uppercase fw-bold">Película</small>
                            <h5 class="mb-0 text-primary">@articulo?.Titulo</h5>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <div class="p-3 rounded @(diasRetraso > 0 ? "bg-danger bg-opacity-10 border border-danger" : "vc-bg-alt")">
                                <small class="vc-text-secondary d-block">Fecha Límite</small>
                                <span class="fw-bold fs-5">@fechaEsperada.ToString("dd/MM/yyyy")</span>
                                @if (diasRetraso > 0)
                                {
                                    <div class="text-danger mt-1 fw-bold">
                                        <i class="bi bi-exclamation-circle"></i> @diasRetraso días de mora
                                    </div>
                                }
                                else
                                {
                                    <div class="text-success mt-1 fw-bold">
                                        <i class="bi bi-check-circle"></i> Entrega a tiempo
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <hr />

                    <h5 class="mb-3"><i class="bi bi-calculator"></i> Liquidación</h5>
                    <div class="table-responsive mb-4">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>Renta Base (@Model.CantidadDias días × $@Model.MontoPorDia.ToString("N2"))</td>
                                    <td class="text-end font-monospace">$@montoBase.ToString("N2")</td>
                                </tr>
                                @if (diasRetraso > 0)
                                {
                                    <tr class="text-danger">
                                        <td>Recargo por Mora (@diasRetraso días × $@articulo?.MontoEntregaTardia.ToString("N2"))</td>
                                        <td class="text-end font-monospace fw-bold">+$@montoRetraso.ToString("N2")</td>
                                    </tr>
                                }
                                <tr class="border-top">
                                    <td class="pt-3 fs-5 fw-bold">Total a Pagar</td>
                                    <td class="text-end pt-3 fs-4 fw-bold text-success">$@montoTotal.ToString("N2")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="ProcesarDevolucionConfirmed" method="post" class="vc-bg-alt p-3 rounded">
                        <input type="hidden" name="id" value="@Model.NoRenta" />

                        <div class="mb-3">
                            <label class="form-label fw-bold small">Comentario de Cierre</label>
                            <input type="text" name="comentarioDevolucion" class="form-control form-control-sm" placeholder="Ej. Disco rayado, caja rota..." />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success py-2 fw-bold">
                                <i class="bi bi-cash-coin me-2"></i> Cobrar y Finalizar
                            </button>
                            <a asp-action="Devolucion" class="btn btn-link text-secondary text-decoration-none">Volver sin procesar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>